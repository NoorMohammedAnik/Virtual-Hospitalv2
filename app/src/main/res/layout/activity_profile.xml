<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rr.virtual_hospital.profile.Profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/natural"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@drawable/sea"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/small_swipe_presc"
                    android:background="@drawable/sld"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    ></android.support.v4.view.ViewPager>
<!--
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="196dp"
                    android:layout_height="296dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/presc_placeholder"
                    />
-->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/spc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/natural"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/profile_llname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_person_black_48dp" />


                    <customfonts.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.025"
                        android:text="Name    :"
                        android:textColor="@color/timecolor"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.customfonts.MyTextView
                            android:id="@+id/txt_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:letterSpacing="0.025"
                            android:text="Noor Mohammed Anik"
                            android:textColor="@color/schedulecolor"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout
                    android:id="@+id/profile_llcell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_phone_android_black_48dp" />


                    <customfonts.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.025"
                        android:text="Cell        :"
                        android:textColor="@color/timecolor"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.customfonts.MyTextView
                            android:id="@+id/txt_profile_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="43dp"
                            android:layout_marginTop="10dp"
                            android:letterSpacing="0.025"
                            android:text="012345678911"
                            android:textColor="@color/schedulecolor"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout
                    android:id="@+id/profile_lldivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dist_prof" />


                    <customfonts.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.025"
                        android:text="Division     :"
                        android:textColor="@color/timecolor"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.customfonts.MyTextView
                            android:id="@+id/txt_profile_division"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="10dp"
                            android:letterSpacing="0.025"
                            android:text="Chittagong"
                            android:textColor="@color/schedulecolor"
                            android:textSize="14dp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout
                    android:id="@+id/profile_llblood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">



                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/droplet" />



                    <customfonts.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.025"
                        android:text="Blood Group :"
                        android:textColor="@color/timecolor"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.customfonts.MyTextView
                            android:id="@+id/txt_profile_blood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:letterSpacing="0.025"
                            android:text="O+"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


            </LinearLayout>

        <Button
            android:id="@+id/btn_upload_prescs"
            android:layout_below="@id/spc"
           android:layout_alignParentBottom="true"
            android:text="Upload Prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>